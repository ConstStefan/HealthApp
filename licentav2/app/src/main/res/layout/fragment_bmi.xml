<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.bmi.BmiFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/summarygrey"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_male"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_male"
                    android:contentDescription="Male"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/text_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            app:cardBackgroundColor="@color/summarygrey"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/icon_female"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_female"
                    android:contentDescription="Female"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/text_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/card_background2">

        <TextView
            android:id="@+id/height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEIGHT"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/height_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_label"
            android:layout_centerHorizontal="true"
            android:text="87 cm"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <SeekBar
            android:id="@+id/height_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_value"
            android:thumbTint="@color/black"
            android:progressTint="@color/black"
            android:max="250"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/card_background2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="WEIGHT (KG)"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/weight_value"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:text="66"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:inputType="number"
            android:gravity="center"/>

        <Button
            android:id="@+id/weight_decrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/weight_value"
            android:layout_marginTop="8dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/button_backgroundbmi" />

        <Button
            android:id="@+id/weight_increase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/weight_value"
            android:layout_marginTop="8dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/button_backgroundbmi"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:background="@drawable/card_background2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="AGE"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/age_value"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:text="20"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:inputType="number"
            android:gravity="center"/>

        <Button
            android:id="@+id/age_decrease"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/age_value"
            android:layout_marginTop="8dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/button_backgroundbmi"/>

        <Button
            android:id="@+id/age_increase"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/age_value"
            android:layout_marginTop="8dp"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:background="@drawable/button_backgroundbmi"/>
    </RelativeLayout>

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Your BMI"
        android:backgroundTint="@color/button_colorbmi"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:elevation="8dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="18sp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:gravity="center" />
</LinearLayout>
