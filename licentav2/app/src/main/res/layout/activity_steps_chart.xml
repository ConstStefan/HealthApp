<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:id="@+id/content_view"
    tools:context=".ui.steps.StepsChartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Steps Chart"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
        android:layout_marginBottom="16dp"
        app:menu="@menu/menu_toolbar"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/summarygrey"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textViewWeeklyAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Average: 0"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewMonthlyAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Average: 0"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTotalStepsWeekly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Steps in Last 7 Days: 0"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/textViewTotalStepsMonthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Steps in Last 30 Days: 0"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp">
        <RadioGroup
            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/buttonLast7Days"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:text="7 zile"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_backgroundswitch"
                android:button="@android:color/transparent"
                />

            <RadioButton
                android:id="@+id/buttonLast30Days"
                android:layout_width="190dp"
                android:layout_height="48dp"
                android:text="31 de zile"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:background="@drawable/button_backgroundswitch"
                android:button="@android:color/transparent"
                />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="@color/summarygrey"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:padding="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
